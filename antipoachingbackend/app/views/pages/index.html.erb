<h1>Pages#index</h1>
<p>Find me in app/views/pages/index.html.erb</p>

<%= bootstrap_form_for @report, url: {action: "index"}, html: {class: "nifty_form"} do |f| %>
  <%= f.number_field :latitude, label:"" %>
  <%= f.number_field :longitude, label:"" %>
  <%= f.text_area :location, label:"" %>
  <%= f.select :species, ["Lion", "Rhinoceros", "Elephant", "Pangolin"], { label: "Species:" }, { class: "selectpicker" } %>
  <%= f.text_field :victim_count %>
  <%= f.datetime_select :event_datetime %>
  <%= f.text_area :description %>
  
  
  <%= f.primary "Submit Report" %>
<% end %>